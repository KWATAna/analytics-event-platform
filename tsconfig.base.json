{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@analytics-event-platform/messaging": [
        "libs/messaging/src/index.ts"
      ],
      "@analytics-event-platform/contracts": [
        "libs/contracts/src/index.ts"
      ],
      "@analytics-event-platform/observability": [
        "libs/observability/src/index.ts"
      ],
      "@analytics-event-platform/persistence": [
        "libs/persistence/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
