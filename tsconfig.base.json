{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,      
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@analytics-event-platform/messaging": [
        "libs/messaging/src/index.ts"
      ],
      "@analytics-event-platform/contracts": [
        "libs/contracts/src/index.ts"
      ],
      "@analytics-event-platform/persistence": [
        "libs/persistence/src/index.ts"
      ],
      "@analytics-event-platform/shared/logger": [
        "libs/shared/logger/src/index.ts"
      ],
      "@my-project/db-client": ["generated/prisma/client"],
      "@my-project/db-client/*": ["generated/prisma/*"],
      "@my-project/db-types": ["generated/prisma/internal/prismaNamespace.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
