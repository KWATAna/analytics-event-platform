{
  "name": "dev-env",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "targets": {
    "infra": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f docker-compose.dev.yml up",
        "cwd": "."
      }
    },
    "services": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run-many --target=serve --projects=gateway-service,ingestion-service,reporting-service --parallel",
        "cwd": "."
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": ".",
        "parallel": false,
        "commands": [
          {
            "command": "docker compose -f docker-compose.dev.yml up -d"
          },
          {
            "command": "sh -c \"until docker compose -f docker-compose.dev.yml exec -T postgres pg_isready -U analytics -d analytics; do sleep 2; done\""
          },
          {
            "command": "nx run persistence:prisma-generate"
          },
          {
            "command": "nx run persistence:db-migrate"
          },
          {
            "command": "nx run-many --target=serve --projects=gateway-service,ingestion-service,reporting-service --parallel"
          }
        ]
      }
    }
  },
  "tags": []
}
